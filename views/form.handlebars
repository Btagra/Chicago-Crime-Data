{{!-- //dropdown to select year and crime type --}}
<div class="container">
    <form class="form-inline">
        <label class="my-1 mr-2" for="crimeselect">Crime Type</label>
        <select class="custom-select my-1 mr-sm-2" id="crimeselect" name="crime">
            <option selected value="Theft">Theft</option>
            <option value="Battery">Battery</option>
            <option value="Narcotics">Narcotics</option>
            <option value="Robbery">Robbery</option>
            <option value="Assault">Assault</option>



        </select>
        <label class="my-1 mr-2" for="yearselect">Year</label>
        <select class="custom-select my-1 mr-sm-2" id="yearselect" name="year">
            <option selected value="2018">2018</option>
            <option value="2017">2017</option>
            <option value="2016">2016</option>
            <option value="2015">2015</option>
            <option value="2014">2014</option>
            <option value="2013">2013</option>

        </select>

        <button type="submit" class="btn btn-light my-1">Add Crime</button>
        <button type="submit" class="btn btn-light my-1" id="render">Render Chart</button>
    </form>

    <br>
    <br>

    <div class="container">

        <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity" value="Chicago" readonly>
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <input type="text" class="form-control" id="inputState" value="Illinois" readonly>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>
        </div>
        <button id="submit" class="btn btn-light">Search</button>

    </div>
    <h1 id="chart2Loader">Chart is loading...</h1>
    <div id="chart2div"></div>
</div>
